<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileSettingsActivity">




    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:civ_border_color="#111111"
        android:alpha="0"
        android:src="@drawable/ic_person_blue_24dp"
        app:civ_border_width="1dp"
        android:id="@+id/profileImage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/edit"
        android:layout_alignParentRight="true"
        android:textSize="19dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/your_profile_picture"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Your Profile Picture"
        android:alpha="0"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/rel1"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/your_profile_picture">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:alpha="0"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:layout_below="@+id/name"
            android:layout_marginTop="-3dp"
            android:enabled="false"
            android:textColor="#111111"
            android:alpha="0"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_person_blue_24dp"
            android:layout_marginRight="30dp"
            android:id="@+id/username"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/rel2"
        android:layout_below="@+id/rel1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:text="Quote"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/quote_text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Quote Line"
            android:drawableEnd="@drawable/ic_assignment_black_24dp"
            android:alpha="0"
            android:enabled="false"
            android:textSize="18dp"
            android:textColor="#111111"
            android:layout_below="@+id/quote_text"
            android:layout_marginTop="-3dp"
            android:layout_marginRight="30dp"
            android:id="@+id/quote"
            />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel2"
        android:layout_marginTop="20dp"
        android:id="@+id/save_btn"
        android:layout_marginHorizontal="20dp"
        android:text="Save"
        android:textSize="17dp"
        android:textStyle="bold"
        android:alpha="0"
        android:background="@drawable/btn_background_login_start"
        android:textColor="#ffffff"/>







</RelativeLayout>